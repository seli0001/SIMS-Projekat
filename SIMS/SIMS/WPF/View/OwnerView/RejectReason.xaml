<Window x:Class="SIMS.WPF.View.OwnerView.RejectReason"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS.WPF.View.OwnerView"
        mc:Ignorable="d"
        Title="RejectReason" Height="250" Width="280" WindowStartupLocation="CenterScreen">

        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Margin="10" HorizontalAlignment="Center" Content="Unesite obrazlozenje za odbijanje rezervacije" />
        <TextBox Text="{Binding RejectMessage}" Width="150" Margin="0" Height="80" Grid.Row="0"/>

        <Button Command="{Binding RejectCommand}" Margin="0" Width="50" Height="20" Grid.Row="1"  Content="Posalji"/>
    </Grid>
</Window>
